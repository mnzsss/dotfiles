ZSH_THEME_GIT_PROMPT_ADDED="%{$fg[cyan]%} ✈"
ZSH_THEME_GIT_PROMPT_MODIFIED="%{$fg[yellow]%} ✭"
ZSH_THEME_GIT_PROMPT_DELETED="%{$fg[red]%} ✗"
ZSH_THEME_GIT_PROMPT_RENAMED="%{$fg[blue]%} ➦"
ZSH_THEME_GIT_PROMPT_UNMERGED="%{$fg[magenta]%} ✂"
ZSH_THEME_GIT_PROMPT_UNTRACKED="%{$fg[grey]%} ✱"


### Added by Zinit's installer
if [[ ! -f $HOME/.local/share/zinit/zinit.git/zinit.zsh ]]; then
    print -P "%F{33} %F{220}Installing %F{33}ZDHARMA-CONTINUUM%F{220} Initiative Plugin Manager (%F{33}zdharma-continuum/zinit%F{220})…%f"
    command mkdir -p "$HOME/.local/share/zinit" && command chmod g-rwX "$HOME/.local/share/zinit"
    command git clone https://github.com/zdharma-continuum/zinit "$HOME/.local/share/zinit/zinit.git" && \
        print -P "%F{33} %F{34}Installation successful.%f%b" || \
        print -P "%F{160} The clone has failed.%f%b"
fi

source "$HOME/.local/share/zinit/zinit.git/zinit.zsh"
autoload -Uz _zinit
(( ${+_comps} )) && _comps[zinit]=_zinit
source /usr/share/zsh-theme-powerlevel10k/powerlevel10k.zsh-theme

zinit light zsh-users/zsh-autosuggestions
zinit light zsh-users/zsh-completions
zinit light zdharma/fast-syntax-highlighting

ZSH_AUTOSUGGEST_STRATEGY=(history completion)

# Aliases
alias ls="exa --icons"
alias cat="bat"
alias zshconfig="code ~/.zshrc"
alias ohmyzsh="code ~/.oh-my-zsh"
alias hyperconfig="code ~/.hyper.js"
alias pacmanconfig="code /etc/pacman.conf"
alias dockerPrune="sudo docker rm -f $(docker ps -aq); docker rmi -f $(docker images -q)"
alias yayClear="yay -Scc"
alias config='/usr/bin/git --git-dir=$HOME/.cfg/.git/ --work-tree=$HOME'

# OpenVpn Beyoung
alias vpn="sudo openvpn --cipher BF-CBC --config ~/gabriel.menezes.ovpn"

# Docker container
function de {
    docker exec -it ${1} bash
}

# Change branch in prime and cybertron
function bpp {
    j cybertron
    ggp
    j ${1}
    ggp
}

# create branch prime and cybertron
function bcb {
    gcb ${2}
    j cybertron
    gcb ${2}
    j ${1}
}

# Change branch in prime and cybertron
function bsw {
    gsw ${2}
    j cybertron
    gsw ${2}
    j ${1}
}

# Pull branch in prime and cybertron
function bpl {
    j cybertron
    ggl
    j ${1}
    ggl
}

# Merge branch in prime and cybertron
function bm {
    gm ${2} ${3} --no-ff
    j cybertron
    gm ${2} ${3} --no-ff
    j ${1}
}

# Open project and start docker
function byp {
    j ${1}
    code .
    dcup
}

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
